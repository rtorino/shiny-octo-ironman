extends ../layouts/default

block content
	div.row
		div.col-md-6.col-md-offset-3
			div.panel.panel-default
				div.panel-heading
					div.panel-title
						| Sign in
				div.panel-body
					include ../includes/messages
					form.form-horizontal(role='form', action='/signin', method='POST')
						div.form-group
							div.col-sm-12
								input#username.form-control(type='text', name='username', placeholder='Your username')
						div.form-group
							div.col-sm-12
								input#password.form-control(type='password', name='password' placeholder='Your password')
						div.form-group
							div.col-sm-12
								button.btn.btn-success(type='submit') Sign in
								&nbsp;
								| No account yet?&nbsp;
								a(href="/signup") Sign up